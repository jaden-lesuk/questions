{{#if addNewPost}}
<h1>New Question</h1>
<div class="well">
 <form>
   <div class="form-group">
     <label for="author">Author</label><br>
     {{input value=author id="author"}}
   </div>

   <div class="form-group">
     <label for="content">Content</label><br>
     {{input value=content id="content"}}
   </div>

   <div class="form-group">
     <label for="addition">Addition</label><br>
     {{input value=addition id="addition"}}
   </div>

   <button class="btn btn-warning btn-block" {{action 'savePost1'}}>Save</button>
 </form>
</div>
{{else}}
  <button class="btn btn-success btn-lg" {{action 'postFormShow'}}>Ask a Question!!!</button>
{{/if}}
