{{#if updatePostForm}}

<div class="well">
  <h3>Update {{post.author}}'s post?</h3>
  <form>
    <div class="form-group">
      <label for="author">Author:</label><br>
      {{input value=author id="author" placeholder=post.author}}
    </div>
    <div class="form-group">
      <label for="content">Question:</label><br>
      {{input value=content id="content" placeholder=post.content}}
    </div>
    <div class="form-group">
      <label for="addition">Specifications:</label><br>
      {{input value=addition id="addition" placeholder=post.addition}}
    </div>
  </form>
  <div class="btn-group">
    <button class="btn btn-success" {{action "update" post}}>Save</button>
    <button class="btn btn-warning" {{action "cancel"}}>Cancel</button>
  </div>
</div>

{{else}}

<button class="btn btn-warning" id="edit-btn" {{action "updatePostForm"}}>Edit</button>

{{/if}}
